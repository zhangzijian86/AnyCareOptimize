<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#F0F0F0">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="11"
        android:orientation="vertical"
        android:background="#FFFFFF"
        >
        <ImageView
            android:id="@+id/xuanzejibingtu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dip"
            android:background="@drawable/zuo" />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="添加个人信息"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#FD7A5C"
            />
        <ImageView
            android:id="@+id/xuanzejibingduigou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dip"
            android:background="@drawable/duigou" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <ImageView
	        android:id="@+id/renbeijing"
	        android:layout_marginTop="15dip"
	        android:layout_centerHorizontal="true"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_marginBottom="15dip"
		    android:layout_marginLeft="70dip"
		    android:layout_marginRight="70dip"
		    android:background="@drawable/renbeijing"
		 />  
		 <Button 
	        android:id="@+id/xinnaoxueguanbing"	
	        android:layout_marginTop="25dip"
	        android:layout_marginLeft="20dip"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:text="心脑血管病"
	        android:textColor="#d3d3d3"
	        android:background="@drawable/zuobai" 
	        android:gravity="center" 
	    />   
	    
	    <Button
	        android:id="@+id/jingzhuibing"	
	        android:layout_below="@id/xinnaoxueguanbing"
	        android:layout_marginTop="35dip"
	        android:layout_marginLeft="20dip"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:text="颈椎病"
	        android:textColor="#d3d3d3"
	        android:background="@drawable/zuobai" 
	        android:gravity="center" 
	    />
	    
	    <Button 
	        android:id="@+id/feiyan"	
	        android:layout_below="@id/jingzhuibing"
	        android:layout_marginTop="35dip"
	        android:layout_marginLeft="20dip"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:text="肺炎"
	        android:textColor="#d3d3d3"
	        android:background="@drawable/zuobai" 
	        android:gravity="center" 
	    />
	    
	    <Button 
	        android:id="@+id/ganbing"	
	        android:layout_below="@id/feiyan"
	        android:layout_marginTop="35dip"
	        android:layout_marginLeft="20dip"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:text="肝病"
	        android:textColor="#d3d3d3"
	        android:background="@drawable/zuobai" 
	        android:gravity="center" 
	    />
	    
	    <Button 
	        android:id="@+id/yaozhuibing"	
	        android:layout_below="@id/ganbing"
	        android:layout_marginTop="35dip"
	        android:layout_marginLeft="20dip"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:text="腰椎病"
	        android:textColor="#d3d3d3"
	        android:background="@drawable/zuobai" 
	        android:gravity="center" 
	    />
	    
	    <Button 
	        android:id="@+id/tangniaobing"	
	        android:layout_below="@id/yaozhuibing"
	        android:layout_marginTop="35dip"
	        android:layout_marginLeft="20dip"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:text="糖尿病"
	        android:textColor="#d3d3d3"
	        android:background="@drawable/zuobai" 
	        android:gravity="center" 
	    />
	    
	    <Button 
	        android:id="@+id/guzhishusong"	
	        android:layout_below="@id/tangniaobing"
	        android:layout_marginTop="35dip"
	        android:layout_marginLeft="20dip"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:text="骨质疏松"
	        android:textColor="#d3d3d3"
	        android:background="@drawable/zuobai" 
	        android:gravity="center" 
	    />
	    
	    <Button 
	        android:id="@+id/jingmaiquzhang"	
	        android:layout_below="@id/guzhishusong"
	        android:layout_marginTop="35dip"
	        android:layout_marginLeft="20dip"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:text="静脉曲张"
	        android:textColor="#d3d3d3"
	        android:background="@drawable/zuobai" 
	        android:gravity="center" 
	    />    
	    
	    <Button 
	        android:id="@+id/laonianchidai"	
	        android:layout_marginTop="25dip"
	        android:layout_marginRight="10dip"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:text="老年痴呆"
	        android:textColor="#d3d3d3"
	        android:background="@drawable/youbai"
	        android:gravity="center"
	        android:layout_alignParentRight="true"
	    />
	    
	    <Button 
	        android:id="@+id/jianzhouyan"	
	        android:layout_below="@id/laonianchidai"
	        android:layout_marginTop="35dip"
	        android:layout_marginRight="10dip"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:text="肩周炎"
	        android:textColor="#d3d3d3"
	        android:background="@drawable/youbai"
	        android:gravity="center"
	        android:layout_alignParentRight="true"
	    />
	    
	     <Button 
	        android:id="@+id/gaoxueya"	
	        android:layout_below="@id/jianzhouyan"
	        android:layout_marginTop="35dip"
	        android:layout_marginRight="10dip"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:text="高血压"
	        android:textColor="#d3d3d3"
	        android:background="@drawable/youbai" 
	        android:gravity="center" 
	        android:layout_alignParentRight="true"
	    />
	    
	    <Button 
	        android:id="@+id/manxingwenyan"	
	        android:layout_below="@id/gaoxueya"
	        android:layout_marginTop="35dip"
	        android:layout_marginRight="10dip"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:text="慢性胃炎"
	        android:textColor="#d3d3d3"
	        android:background="@drawable/youbai" 
	        android:gravity="center" 
	        android:layout_alignParentRight="true"
	    />   
	    
	    <Button 
	        android:id="@+id/shenbing"	
	        android:layout_below="@id/manxingwenyan"
	        android:layout_marginTop="35dip"
	        android:layout_marginRight="10dip"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:text="肾病"
	        android:textColor="#d3d3d3"
	        android:background="@drawable/youbai" 
	        android:gravity="center" 
	        android:layout_alignParentRight="true"
	    />   
	    
	    <Button 
	        android:id="@+id/gaoxuezhi"	
	        android:layout_below="@id/shenbing"
	        android:layout_marginTop="35dip"
	        android:layout_marginRight="10dip"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:text="高血脂"
	        android:textColor="#d3d3d3"
	        android:background="@drawable/youbai"
	        android:gravity="center" 
	        android:layout_alignParentRight="true"
	    />  
	    
	   <Button 
	        android:id="@+id/tongfengbing"	
	        android:layout_below="@id/gaoxuezhi"
	        android:layout_marginTop="35dip"
	        android:layout_marginRight="10dip"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:text="痛风病"
	        android:textColor="#d3d3d3"
	        android:background="@drawable/youbai" 
	        android:gravity="center" 
	        android:layout_alignParentRight="true"
	    /> 
	    
	    <Button 
	        android:id="@+id/guanjieya"	
	        android:layout_below="@id/tongfengbing"
	        android:layout_marginTop="35dip"
	        android:layout_marginRight="10dip"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:text="关节炎"
	        android:textColor="#d3d3d3"
	        android:background="@drawable/youbai" 
	        android:gravity="center" 
	        android:layout_alignParentRight="true"
	    />  
    </RelativeLayout>
</LinearLayout>
