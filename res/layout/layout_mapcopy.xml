<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#F0F0F0">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="11"
        android:orientation="vertical"
        android:background="#FFFFFF"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="防走失"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#FD7A5C"
            />
        <ImageView
            android:id="@+id/return_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dip"
            android:background="@drawable/zuo" />
        <TextView 
            android:id="@+id/newlocation_textview"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="反向查询"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#FD7A5C"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
	<RelativeLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:orientation="vertical"
    	android:layout_margin="5px"
        >
        <com.baidu.mapapi.map.MapView  
		    android:id="@+id/bmapView"  
		    android:layout_width="fill_parent"  
		    android:layout_height="fill_parent"  
		    android:clickable="true" />
        <Button
            android:id="@+id/mylocation_button"
            android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"  
		    android:background="@drawable/mylocation"
		    android:layout_above="@id/bmapView"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="50dip"
		    android:layout_marginBottom="10dip"
            />
	</RelativeLayout>
</LinearLayout>
